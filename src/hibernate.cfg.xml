<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle8iDialect</property>
		<property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="show_sql">false</property>
		<mapping class="com.bs.hibernate.model.User" />
		<mapping class="com.bs.hibernate.model.Operator" />
		<mapping class="com.bs.hibernate.model.Department" />
		<mapping class="com.bs.hibernate.model.Customer" />
		<mapping class="com.bs.hibernate.model.BankAccount"/>
		<mapping class="com.bs.hibernate.model.Transaction"/>
		<mapping class="com.bs.hibernate.model.Manager"/>
		<mapping class="com.bs.hibernate.model.SchedulePlan"/>

	</session-factory>

</hibernate-configuration>